<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="hospital_patient_action">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
    </record>

   

    <record model="ir.actions.act_window" id="hospital_assessment_action">
        <field name="name">Assessment</field>
        <field name="res_model">hospital.assessment</field>
        
    </record>

    <record id="hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header></header>
                    <div class="oe_title">
                        <h1><field name="name_seq"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="doctor_id" options="{'no_create_edit': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="age"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Assessments">
                            <field name="assessments">
                                <tree>
                                    <field name="name_seq"/>
                                    <field name="doctor_id"/>
                                    <field name="note"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        
        <field name="arch" type="xml">
            <tree>
                <field name="name_seq"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="doctor_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    
  

    <record id="hospital_assessment_tree" model="ir.ui.view">
        <field name="name">hospital.assessment.tree</field>
        <field name="model">hospital.assessment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_seq"/>
                <field name="doctor_id" options="{'no_create_edit': True, 'no_create': True}"/>
                <field name="patient_id" options="{'no_create_edit': True, 'no_create': True}"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <menuitem id="hospital_root_menu" name="Hospital"/>
    <menuitem id="hospital_patient_menu" name="Patients" action="hospital_patient_action" parent="hospital_root_menu"/>
    <menuitem id="hospital_assessment_menu" name="Assessments" action="hospital_assessment_action" parent="hospital_root_menu" />
</odoo>